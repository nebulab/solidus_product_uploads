<%= render :partial => 'spree/admin/shared/product_sub_menu' %>

<%= render :partial => 'spree/admin/shared/product_tabs', :locals => { :current => 'Docs' } %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @doc } %>

<% content_for :page_actions do %>
  <li><%= button_link_to t(:back_to_docs_list), admin_product_docs_url(@product), :icon => 'icon-arrow-left' %></li>
<% end %>

<%= form_for [:admin, @product, @doc], :html => { :multipart => true } do |f| %>
  <fieldset data-hook="edit_doc">
    <legend align="center"><%= @doc.attachment_file_name%></legend>
    <div data-hook="thumbnail" class="field alpha three columns align-center">
      <%= f.label t(:document) %><br>
      <%= image_tag( get_doc_icon(@doc) ) %>
      <%= link_to(@doc.attachment.original_filename, @doc.attachment.url) %>
    </div>
    <div class="nine columns omega">
      <%= render :partial => 'form', :locals => { :f => f } %>  
    </div>
    <div class="clear"></div>
    <div class="form-buttons filter-actions actions" data-hook="buttons">
      <%= button t(:update), 'icon-refresh' %>
      <span class="or"><%= t(:or) %></span>
      <%= link_to t(:cancel), admin_product_docs_url(@product), :id => 'cancel_link', :class => 'button icon-remove' %>
    </div>
  </fieldset>
<% end %>
